{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <th>User</th>
            {% if post.getUser.getFirstName is defined %}
                <td>{{ post.getUser.getFirstName  }}</td>
            {% endif %}
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ post.file }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ post.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>comment</th>
                {% for post in post.getYes %}
                <td>{{ post  }}</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('post_index') }}">back to list</a>

    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
